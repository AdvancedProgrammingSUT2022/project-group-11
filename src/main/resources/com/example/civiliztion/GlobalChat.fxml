<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Font?>
<Pane style="-fx-background-color: #ff6a00" styleClass="secondPane" stylesheets="@GlobalChatStyle.css" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.civiliztion.View.GlobalChatMenu"
      prefHeight="800.0" prefWidth="1530.0">
    <HBox alignment="CENTER" prefWidth="1530" prefHeight="97">
        <Pane prefHeight="98.0" prefWidth="1739.0">
            <ImageView fitHeight="41.0" fitWidth="43.0" layoutX="34.0" layoutY="28.0" pickOnBounds="true"
                       preserveRatio="true">
                <Image url="@images/back.png"/>
            </ImageView>
            <Label alignment="CENTER" layoutX="659.0" layoutY="31.0" prefHeight="18.0" prefWidth="213.0"
                   text="Global Chat">
                <font>
                    <Font name="High Tower Text" size="32.0"/>
                </font>
            </Label>

        </Pane>
    </HBox>

    <VBox layoutX="111.0" layoutY="110.0" prefHeight="635.0" prefWidth="666.0">
        <children>
            <ScrollPane prefHeight="644.0" prefWidth="666.0">
                <content>
                    <VBox fx:id="allMessages" prefWidth="332.0" styleClass="globalChatVbox"/>
                </content>
            </ScrollPane>
        </children>

    </VBox>
    <TextField fx:id="textToSend" layoutX="132.0" layoutY="745.0" onKeyReleased="#enter" prefHeight="39.0"
               prefWidth="564.0"/>
    <ImageView fitHeight="32.0" fitWidth="38.0" layoutX="707.0" layoutY="749.0" onMouseClicked="#send"
               pickOnBounds="true" preserveRatio="true">
        <Image url="@images/send.png"/>
        <cursor>
            <Cursor fx:constant="HAND"/>
        </cursor>
    </ImageView>


</Pane>
